{% extends "::base.html.twig" %}

{% block page_content %}

    <div class="box box-primary">

        <div class="page-header">
            <a class="btn btn-default pull-right hidden-print" role="button"
               href="{{ path('baixar_relatorio',{'query':query}) }}">Download</a>
            <a class="btn btn-default pull-right hidden-print" role="button"
               href="javascript:window.history.back();">Voltar</a>
            <h1>Lista de Alunos
            </h1>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <colgroup>
                    <col class="col-md">
                    <col class="col-md">
                </colgroup>
                <thead>
                <tr>
                    <th class="text-center">CÂMPUS</th>
                    <th class="text-center">CURSO</th>
                    <th class="text-center">NOME</th>
                    <th class="text-center">Vínculo</th>
                    <th class="text-center">E-mail</th>
                </tr>
                </thead>
                <tbody>
                {% for key4, value4 in data %}
                    {# CANDIDATOS #}
                    <tr>
                        <td class="text-center">{{ value4.nomeCampus }}</td>
                        <td class="text-center">{{ value4.nomeCurso }}</td>
                        <td class="text-center">{{ value4.nome }}</td>
                        <td class="text-center">{{ value4.descricaoSituacao }}</td>
                        <td class="text-center"> {% if value4.email2 is not null and value4.email2 is not empty %}{{ value4.email2 }}{% else %}{{ value4.email }}{% endif %}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div><!-- .table-responsive -->
        <div class="text-center hidden-print" style="margin-bottom: 20px">
            <a class="btn btn-default" role="button" href="{{ path('index') }}">
                Voltar
            </a>
        </div>
    </div>

{% endblock %}